{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/__tests__/**/*.ts",
    "./**/__tests__/**/*.tsx",
    "./jest.setup.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
