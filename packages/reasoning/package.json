{
  "name": "@deltecho/reasoning",
  "version": "1.0.0",
  "description": "AGI reasoning kernel with OpenCog-inspired cognitive architecture - extracted from inferno-kernel",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./atomspace": {
      "import": "./dist/atomspace/index.js",
      "types": "./dist/atomspace/index.d.ts"
    },
    "./reasoning": {
      "import": "./dist/reasoning/index.js",
      "types": "./dist/reasoning/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./distributed": {
      "import": "./dist/distributed/index.js",
      "types": "./dist/distributed/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --coverage"
  },
  "keywords": [
    "agi",
    "opencog",
    "cognitive-architecture",
    "reasoning",
    "atomspace",
    "pln",
    "moses",
    "attention-allocation"
  ],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@deltecho/cognitive": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.27",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
