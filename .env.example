# Deltecho Production Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096

# OpenRouter Configuration (Unified API access)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3-opus
OPENROUTER_TEMPERATURE=0.7

# Ollama Configuration (Local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =============================================================================
# Security Configuration
# =============================================================================

# Encryption key for secure storage (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Input validation
MAX_INPUT_LENGTH=10000

# =============================================================================
# Memory System Configuration
# =============================================================================

# Memory limits
MEMORY_LIMIT=1000
REFLECTION_LIMIT=100

# HyperDimensional Memory
HYPERDIMENSIONAL_DIMENSIONS=10000
MEMORY_DECAY_RATE=0.98
CONTEXT_WINDOW_SIZE=128

# =============================================================================
# Desktop Application Configuration
# =============================================================================

# Electron Configuration
ELECTRON_DEV_TOOLS=false
ELECTRON_AUTO_UPDATE=true

# Tauri Configuration
TAURI_BUNDLE_IDENTIFIER=com.deltecho.app

# =============================================================================
# Orchestrator Configuration
# =============================================================================

# IPC Server
IPC_SOCKET_PATH=/tmp/deltecho.sock
IPC_TCP_PORT=9876

# Webhook Server
WEBHOOK_PORT=3000
WEBHOOK_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Task Scheduler
SCHEDULER_TIMEZONE=UTC

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/deltecho/app.log

# =============================================================================
# Database Configuration (if using external storage)
# =============================================================================

# PostgreSQL (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/deltecho

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_MEMORY_SYSTEM=true
ENABLE_PERSONALITY_EVOLUTION=true
ENABLE_EMOTIONAL_DYNAMICS=true
ENABLE_SECURITY_HARDENING=true
